{% extends 'base.html.twig' %}

{# ... #}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
	<div class="container" style="background-color:#1A0F0F; text-align:center">
		<div class="container-fluid pt-5" style="text-align:center">
			<img src="../assets/images/Logo.png" style="width:300px; height: 300px;" alt="logo RCL eSport Team">
		</div>
			
		<h1 style="text-align:center" class="text-light pt-5">Connexion Back-Office</h1>
		
		<form action="" method="post" class="d-flex  justify-content-center">

			<div class="input-group pt-5 mb-3 justify-content-center" style="width:500px">
  				<span class="input-group-text" id="basic-addon1" style="color:#1A0F0F">@ Email :</span>
  				<input type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1" type="text" id="username" name="_username" value="">
			</div>

			<div class="input-group mb-3">
  				<span class="input-group-text" id="basic-addon1" style="color:#1A0F0F">Password : </span>
  				<input type="text" class="form-control" aria-label="Username" aria-describedby="basic-addon1" type="password" id="password" name="_password">
			</div>
			
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn-success my-3" type="submit">login</button>
		</form>
	</div>

{% endblock %}
