{% extends 'base.html.twig' %}

{# ... #}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
	<div class="container">
		<div class="container-fluid" style="text-align:center; padding-top:30px;">
			<img src="../assets/images/Logo.png" style="width:300px; height: 300px;" alt="logo RCL eSport Team">
		</div>
			
		<h1 style="text-align:center;">Connexion Back-Office</h1>
		<form action="" method="post">
				<div class="form-group">
					<label for="username">Email:</label>
					<input class="form-control" type="text" id="username" name="_username" value=""/>
				</div>

				<div class="form-group">
					<label for="password">Password:</label>
					<input class="form-control" type="password" id="password" name="_password"/>
				</div>
				
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn btn-success my-3" type="submit">login</button>
			</form>
	</div>

{% endblock %}
