
<!doctype html>
<html lang="fr">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <title> {% block title %}RCL{% endblock %}</title>
</head>

<body> 
    <!-- Nav -->
    
    {# Si le mot back est présent dans la route #}
    {% if "back" in app.request.get("_route") %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    {% else %}
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    {% endif %}
        <div class="container-fluid">

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% block menu %}
                    
    
                    {% if is_granted("ROLE_MANAGER") %}
                        <li class="nav-item">
                            <a class="nav-link " href="{{path("admin")}}"><i class="bi bi-emoji-smile"></i> Back-office</a>
                        </li>
                    
                    {% endif %}
                    
                {% endblock %}
                </ul>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Profil</a></li>
                            {% if is_granted("ROLE_MANAGER") %}
                                <li><a class="dropdown-item" href="">Backoffice</a></li>
                            {% endif %}
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="">Déconnexion</a></li>
                        </ul>
                    </li>
                </ul>  
                    <a href="" class="btn btn-danger me-2">Connexion</a>


            </div>
        </div>
    </nav>

    {% block body %}{% endblock %}

    <!-- footer -->
    <footer class="container-fluid py-4 border-top text-center">
        <span class="text-muted">RCL made with &hearts;
        </span>
    </footer>
	
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ"
        crossorigin="anonymous"></script>

   
</body>

</html>